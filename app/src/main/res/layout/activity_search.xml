<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

    <!-- Rectángulo 1 -->
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Rectángulo 6 -->
    <View
        android:id="@+id/rectangle_6"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="-50dp"
        android:background="@drawable/rectangle_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título ClickDgo -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="56dp"
        android:text="ClickDgo"
        android:textColor="#6B705C"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_rectangle_background"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar productos"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="#8E9295"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <!-- Contenedor de tarjetas de categorías -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- GridLayout para mostrar las tarjetas en una cuadrícula -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Tarjeta 1: Electrónica -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoryTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Electrónica"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:id="@+id/categoryImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/electronics_image"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/viewButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#597051"
                    android:text="Ver"
                    android:textColor="#FEFEFE"
                    android:paddingTop="8dp"/>
            </LinearLayout>

            <!-- Tarjeta 2: Imagen -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoryTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Imagen"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:id="@+id/categoryImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anime_image"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/viewButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#597051"
                    android:text="Ver"
                    android:textColor="#FEFEFE"
                    android:paddingTop="8dp"/>
            </LinearLayout>

            <!-- Tarjeta 3: Música -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoryTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Música"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:id="@+id/categoryImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/electronics_image"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/viewButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#597051"
                    android:text="Ver"
                    android:textColor="#FEFEFE"
                    android:paddingTop="8dp"/>
            </LinearLayout>

            <!-- Tarjeta 4: Videojuegos -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoryTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Videojuegos"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:id="@+id/categoryImage4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/electronics_image"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/viewButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#597051"
                    android:text="Ver"
                    android:textColor="#FEFEFE"
                    android:paddingTop="8dp"/>
            </LinearLayout>

        </GridLayout>



    </ScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#414240"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_text_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="-120dp"
        app:itemIconSize="24dp"
        app:itemActiveIndicatorStyle="@style/IndicatorStyle"
        app:itemIconPadding="8dp"
        app:itemHorizontalTranslationEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
