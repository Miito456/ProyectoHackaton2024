<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

    <!-- Texto de búsqueda -->

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="-50dp"
        android:background="@drawable/rectangle_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="56dp"
        android:text="ClickDgo"
        android:textColor="#6B705C"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Ícono de búsqueda -->

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="Hola, ****"
        android:textColor="#6B705C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <!-- Botones "Para ti" y "Descubrir" -->

    <TextView
        android:id="@+id/searchTextView"
        android:layout_width="217dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Encuentra lo que estás buscando"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingTextView" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_search"
        android:backgroundTint="#8E9295"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingTextView" />

    <!-- Lista de productos -->

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchTextView">

        <Button
            android:id="@+id/forYouButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#597051"
            android:text="Para ti"
            android:textColor="#fefefe" />

        <Button
            android:id="@+id/discoverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#9AB092"
            android:text="Descubrir"
            android:textColor="#FEFEFE" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contenedor para centrar las tarjetas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_horizontal">

            <!-- Producto 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/product_card_background"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/productImage1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_hair_accessory"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/productTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accesorios personalizados"
                        android:textColor="#FEFEFE"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/productDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pantalon Formal para Dama, talla M"
                        android:textColor="#FEFEFE"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/productPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$120"
                        android:textColor="#FEFEFE"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/buyButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar"
                    android:textColor="#FFF"
                    android:backgroundTint="#597051"/>
            </LinearLayout>

                <!-- Producto 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/product_card_background"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/productImage2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_hair_accessory"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/productTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ropa"
                            android:textColor="#FEFEFE"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/productDescription2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barrita de chocolate, sin azucar"
                            android:textColor="#FEFEFE"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/productPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$120"
                            android:textColor="#FEFEFE"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/buyButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar"
                        android:textColor="#FFF"
                        android:backgroundTint="#597051"/>
                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#414240"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_text_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="-120dp"
        app:itemIconSize="24dp"
        app:itemActiveIndicatorStyle="@style/IndicatorStyle"
        app:itemIconPadding="8dp"
        app:itemHorizontalTranslationEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
